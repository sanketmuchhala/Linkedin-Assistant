{
  "manifest_version": 3,
  "name": "LinkedIn Job Application Assistant",
  "version": "1.0",
  "description": "AI-powered job application assistant that auto-fills forms on LinkedIn and other job portals",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://simplify.jobs/*",
    "https://jobrightai.com/*",
    "https://api.deepseek.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.linkedin.com/feed/*",
        "https://simplify.jobs/*",
        "https://jobrightai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Job Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.linkedin.com/*", "https://simplify.jobs/*", "https://jobrightai.com/*"]
    }
  ]
}